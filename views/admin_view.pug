doctype html
html
    head
        title Ecommerce
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet' href='/css/style.css')
        style.
            img{width:50%}
    body
        nav.navbar.navbar-inverse
            .container
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/admins/admin_index') Ecommerce
                #navbar.collapse.navbar-collapse
                    ul.nav.navbar-nav
                        li
                            a(href='/admins/admin_index') Home
                        li
                            a(href='/products/add') Add Product
                    ul.nav.navbar-nav.navbar-right
                        li
                            a(href='/upload') Upload Images
                        li 
                            a(href='/admins/logout') logout
        .container
            !=messages('message',locals)
            if errors
                each error, i in errors
                    div(class="alert alert-danger") #{error.msg}
            block content
                ul.list-group
                    each product,i in products
                        .row.col-md-4
                            li.list-group-item
                                p.text-center
                                    img.rounded.mx-auto.d-block(src='/image/'+product.product_name+'_01.jpg',alt="img")
                                p.text-center
                                    a(href="/products/"+product._id)=product.product_name
            br
            hr
        script(src='/bower_components/jquery/dist/jquery.js')
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
        script(src='/js/main.js')